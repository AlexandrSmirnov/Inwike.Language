<div class="login-box">
  <h2>Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>
    <fieldset>
        
        <div class="input-wrap">
          <div class="input-prepend input-group" title="New password">
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
            <%= f.password_field :password, autofocus: true, class: 'form-control', placeholder: "New password", autocomplete: "off" %>
          </div>
        </div>
        
        <div class="input-wrap">
          <div class="input-prepend input-group" title="Confirm new password">
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
            <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Confirm new password", autocomplete: "off" %>
          </div>
        </div>
        
        <div class="button-login button-login_left">	
          <%= f.submit "Change my password", class: 'btn btn-primary' %>
        </div>
        <div class="clearfix"></div>
        <br/>
    </fieldset>
  <% end %>
</div>

