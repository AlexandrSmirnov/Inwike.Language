<div class="col-sm-12">
  <div class="box">
    <div class="box-header">
      <h2><i class="fa fa-align-justify"></i><span class="break"></span><%= t('calendar.calendar') %> занятий</h2>
    </div>
    <div class="box-content">
      <%#*Блок отображения часового пояса в календаре:%>
      <%#*Для ученика%>
        <div class="row">
            <div class="col-sm-2">
                <div id="timezone-box">
                    <h3>
                        <%= t('calendar.timezone') %>
                    </h3>
                    <p>
                        <%= t('calendar.timezone_text') %>
                    </p>
                    <div class="controls">
                        <%= collection_select(:filter, :timezone, student_timezone_list, :first, :last, { :selected => student_timezone_list.keys.first}, {:class => "form-control"}) %>
                    </div>
                    </br>
                </div>     
                    
            <div id="events-info">

            </div>  
          
        </div>
        <div class="col-sm-10">
            <div id="calendar"></div>	
        </div>	
      </div>
      
    </div>
  </div>
</div><!--/col-->
<%= @unique_number %>

<%= stylesheet_link_tag "calendar" %>   
<%= stylesheet_link_tag "student/calendar" %>   

<% #  javascript_tag "var PAYMENT_LINK = '#{student_new_payment_path}';" %>
<%= javascript_tag "var AUTH_TOKEN = '#{form_authenticity_token}';" if protect_against_forgery? %>
<%= javascript_include_tag "student/calendar" %>