<div class="col-sm-4">
  <div class="box">
    <div class="box-header">
      <h2><i class="fa fa-sitemap"></i><span class="break"></span>Категории</h2>
    </div>
    <div class="box-content">   
      <a class="btn btn-success" href="<%= new_admin_services_category_path %>"><i class="fa fa-plus"></i> Добавить категорию</a>
      <br/>
      
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Название</th>
            <th> </th>
          </tr>
        </thead>   
        <tbody>                                

        <% @services_categories.each do |category| %>                                
          <tr>
            <td><%= category.name %></td> 
            <td class="text-right">
              <a class="btn btn-info" href="<%= edit_admin_services_category_path(category) %>"><i class="fa fa-edit "></i></a>
              <a class="btn btn-danger" href="<%= admin_services_category_path(category) %>" data-method="delete" rel="nofollow" data-confirm="Действительно удалить?"><i class="fa fa-trash-o "></i></a>
            </td>
          </tr>
        <% end %>                                  
        </tbody>
      </table>    
           
    </div>
  </div>
</div><!--/col-->

<div class="col-sm-8">
  <div class="box">
    <div class="box-header">
      <h2><i class="fa fa-align-justify"></i><span class="break"></span>Услуги</h2>
    </div>
    <div class="box-content">      
      <a class="btn btn-success" href="<%= new_admin_service_path %>"><i class="fa fa-plus"></i> Добавить услугу</a>
      <br/>
      
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Название</th>
            <th>На главной</th>
            <th>Индекс сортировки</th>
            <th>Категория</th>
            <th style="width: 100px;"> </th>
          </tr>
        </thead>   
        <tbody>                                

        <% @services.each do |service| %>
          <tr>
            <td><%= service.name %></td> 
            <td><%= (service.show_on_main ? '<i class="fa fa-check"></i>'.html_safe : '' ) %></td> 
            <td><%= service.sort_index %></td> 
            <td><%= service.services_category.name if service.services_category %></td> 
            <td class="text-right">
              <a class="btn btn-info" href="<%= edit_admin_service_path(service) %>"><i class="fa fa-edit "></i></a>
              <a class="btn btn-danger" href="<%= admin_service_path(service) %>" data-method="delete" rel="nofollow" data-confirm="Действительно удалить?"><i class="fa fa-trash-o "></i></a>
            </td>
          </tr>
        <% end %>                                  
        </tbody>
      </table>    
      
    </div>
  </div>
</div><!--/col-->