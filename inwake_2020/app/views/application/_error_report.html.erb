<div class="modal fade report-a-problem-dialog" tabindex="-1" role="dialog" aria-labelledby="reportAProblemDialog" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only"><%= t('general.close') %></span></button>
        <h4 class="modal-title"><%= t('report_a_problem.report_a_problem') %></h4>
      </div>
      <%= form_for ErrorReport.new, url: report_problem_path, :html => { :class => "form-horizontal" } do |f| %>
        <div class="modal-body">
          <div class="form-description">
            <p><%= t('report_a_problem.text').html_safe %></p>
          </div>
         <div class="form-message hidden">
            <p><%= t('report_a_problem.success').html_safe %></p>            
          </div>
          <div class="form-group">
            <label class="control-label" for="focusedInput"><%= t('report_a_problem.file') %></label>
            <div class="controls">
              <%= f.file_field :file %>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label" for="focusedInput"><%= t('report_a_problem.description') %></label>
            <div class="controls">
              <%= f.text_area :description, size: "24x6", class: "modal-taxtarea" %>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal"><%= t('general.close') %></button>
          <button type="submit" class="btn btn-primary"><%= t('report_a_problem.send_report') %></button>
        </div>
      <% end %>
    </div>
  </div>
</div>